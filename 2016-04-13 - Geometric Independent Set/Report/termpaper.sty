\makeatletter

%\makeatletter

\def\@maketitle{%
 \newpage%
 \null%
 \begin{center}%
  \huge{\@title}\par%
  \vskip 1em%
  \large{\@author}%
  \vskip 1em%
  \normalsize{\@date}%
 \end{center}%
 \par\par%
}